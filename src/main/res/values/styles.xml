<resources>

    <style name="LinearLayout"/>
    <style name="TextView"/>
    <!-- Base applicatic_themeheme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize yic_themeheme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/main</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="vp1_header_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grayl</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="vp1_header_number">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grayl</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/guillotine_background</item>
    </style>



    <style name="Matchwh">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--
    lineatlayout orientation==vertical
    -->
    <style name="LinearLayout.MatchwhV">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LinearLayout.MatchWandH1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!--
    关于产品页面 包含产品更新的lineatlayout
    -->
    <style name="LinearLayout.ContainUpdata">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/padding_chu2</item>
    </style>

    <!--
       关于产品页面 当前产品更新的标题的textview的style
        -->
    <style name="TextView.TitleAboutProductCurrent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin</item>
        <item name="android:layout_marginTop">@dimen/margin_x2</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_title_big</item>
    </style>
    <!--
   关于产品页面 当前产品更新的内容的textview的style
    -->
    <style name="TextView.ContentAboutProductCurrent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/text_margintop</item>
        <item name="android:paddingLeft">@dimen/padding_left_normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <!--
 关于产品页面 历史产品更新的标题的textview的style
  -->
    <style name="TextView.TitleAboutProductLast">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_x2</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_title_normal</item>
    </style>
    <!--
关于产品页面 历史产品更新的更新内容的textview的style
-->
    <style name="TextView.ContentAboutProductLast">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/text_margintop</item>
        <item name="android:paddingLeft">@dimen/padding_left_normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>
</resources>
