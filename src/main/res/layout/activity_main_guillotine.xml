<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:id="@+id/setting_iv_open"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_menu" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:paddingBottom="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:id="@+id/ll_default_setting"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp">
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_settings"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:text="默认设置"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/light_gray1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_alter_theme"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp">
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_theme"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:text="更换主题"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/light_gray1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_alter_type"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp">
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_type"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:text="修改分类"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/light_gray1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_backup"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp">
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_backup"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:text="备份数据"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/light_gray1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_restore"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp">
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_recover"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:text="恢复数据"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/light_gray1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_addpaw"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp">
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_lock"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:text="软件加密"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/light_gray1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_product"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp">
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_product"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:text="关于产品"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/light_gray1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp">
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_author"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:text="关于作者"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/light_gray1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>