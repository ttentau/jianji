<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        android:id="@+id/main_vp1_ll_up"
        layout="@layout/vp1_header"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        />

    <include
        android:id="@+id/include_header"
        layout="@layout/rv_header_item"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/main_vp1_ll_up"
        />
    <!--<android.support.v7.widget.RecyclerView-->
        <!--android:layout_below="@id/include_header"-->
        <!--android:id="@+id/main_vp1_rcv"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->
    <!--</android.support.v7.widget.RecyclerView>-->
    <ListView
        android:layout_below="@id/include_header"
        android:id="@+id/main_vp1_rcv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/main_vp1_iv_add"
        android:src="@drawable/floatbutton_ic_add"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:borderWidth="0dp"
        app:elevation="6dp"
        app:fabSize="normal"
        app:pressedTranslationZ="12dp"/>
</RelativeLayout>