<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/rcv_item_tv_data"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:textColor="@color/grayl"
        android:textSize="16sp"
        android:visibility="gone" />

    <com.ttentau.jianji.widget.SwipeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <include layout="@layout/swipe_content" />
        <include layout="@layout/swipe_delete" />
    </com.ttentau.jianji.widget.SwipeLayout>

    <TextView
        android:id="@+id/rcv_item_tv_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:textColor="@color/grayl"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/rcv_item_tv_from"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:textColor="@color/grayl"
        android:textSize="16sp"
        android:visibility="gone" />
</LinearLayout>